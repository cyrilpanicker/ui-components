{
  "name": "webpack-demo",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "remove:typings": "rimraf ./typings",
    "remove:build": "concurrently \"rimraf ./build\" \"rimraf ./bundled-build\"",
    "install:typings": "npm run remove:typings && typings install",
    "compile:ts": "tsc --outDir ./build",
    "compile:ts:watch": "tsc --outDir ./build --watch",
    "compile:sass": "node-sass ./source --output ./build ----output-style expanded",
    "compile:sass:watch": "node-sass ./source --output ./build ----output-style expanded --watch",
    "copy:index": "mkdirp ./build && ncp ./source/index.html ./build/index.html",
    "bundle": "webpack",
    "bundle:watch": "webpack --watch",
    "build": "npm run remove:build && concurrently \"npm run compile:ts\" \"npm run compile:sass\" \"npm run copy:index\" && npm run bundle",
    "build:watch": "concurrently \"npm run compile:ts:watch\" \"npm run bundle:watch\" \"npm run compile:sass:watch\"",
    "postinstall": "npm run install:typings && npm run build",
    "run:server": "lite-server --config ./server-config.json",
    "start": "npm run run:server",
    "start:watch": "concurrently \"npm run run:server\" \"npm run build:watch\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^2.1.0",
    "css-loader": "^0.23.1",
    "html-webpack-plugin": "^2.17.0",
    "lite-server": "^2.2.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.7.0",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "jquery": "^2.2.4",
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  }
}
